- title "Start Standard"

= header('Log a Standard') do
  .ajaxy_intro
    = form_tag new_analytical_standard_path, :method => 'get' do
      %p
        = label_tag(:instrument, "Instrument")
        = select_tag :instrument, options_for_select([["Start here", ""]] + instruments.collect{ |i| [i.name, i.id] }), :class => "dynamic_select"
      %p
        = label_tag(:analytical_method, "Method")
        = select_tag :analytical_method, options_for_select([["Select an instrument first", ""]])
      = submit_tag "Start standard log", :disable_with => "Starting", :id => "standard_submit"
  %div{ :class => "ajaxy_form display-none" }
    