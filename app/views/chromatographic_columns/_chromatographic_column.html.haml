.indexitem{ :id => "#{"even" if chromatographic_column_counter.even?}"}
  %h1= chromatographic_column.name
  = "Used on #{Instrument.find(chromatographic_column.instrument_id).name}"
  = " for #{time_ago_in_words(chromatographic_column.created_at)}"
  %span{ :class => "editlink" }
    = link_to 'Edit', edit_chromatographic_column_path(chromatographic_column.id)
  