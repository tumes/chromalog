- title "New user"

= header('Sign Up') do
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %p
      = f.label :email
      = f.text_field :email
      = f.error :email
    %p
      = f.label :name
      = f.text_field :name
      = f.error :name
    %p
      = f.label :password
      = f.password_field :password
      = f.error :password
      %br/
      = f.hint 'Minimum 4 characters'
    %p
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = f.error :password_confirmation
    = f.input :security_code
    = f.input :terms_of_service, :as => :radio
    / %p
    /   = f.label :terms_of_service
    /   By checking this box you agree that...
    /   %br/
    /   I agree
    /   = f.check_box :terms_of_service, :input_html => { :value => 'true' }
    /   = f.error :terms_of_service
    = f.submit 'Sign up', :disable_with => "Submitting..."
