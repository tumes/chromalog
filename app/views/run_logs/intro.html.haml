- title "Start Run Log"

= header('Log a Run') do
  .ajaxy_intro
    - form_tag new_run_log_path, :method => 'get' do
      %p
        = label_tag(:instrument, "Instrument")
        = select_tag :instrument, options_for_select([["Select one", ""]] + instruments.collect{ |i| [i.name, i.id] }), :class => "dynamic_select"
      %p
        = label_tag(:analytical_method, "Method")
        = select_tag :analytical_method, nil, :class => "dynamic_select"
      %p
        = label_tag(:chromatographic_column, "Column")
        = select_tag :chromatographic_column
      %p
        = label_tag(:levels, "Levels")
        = text_field_tag(:levels, 3, :size => 1)
      = submit_tag "Start run log", :disable_with => "Starting"
    
  %div{ :class => "ajaxy_form display-none" }