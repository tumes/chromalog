%div{ :id => "level#{calibration_level_counter}", :class => "#{"display-none" unless calibration_level_counter == 0}"}
  #polaroid-border
    #polaroid-block
      %h2= "Snapshot for #{@instrument.name} #{@method.name}"
      - @method.analytes.each do |analyte|
        = analyte.name
        %b area
        %br/
      - unless calibration_level == @calibration_levels.last  
        %a{ :id => "next", :href => "#" } Next
      - unless calibration_level == @calibration_levels.first
        %a{ :id => "back", :href => "#" } Back