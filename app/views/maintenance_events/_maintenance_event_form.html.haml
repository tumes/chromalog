= simple_form_for @maintenance_event do |f|
  = f.input :instrument_id, :collection => instruments, :as => :select
  = f.input :user_id, :label => "Technician", :collection => users, :as => :select
  = f.input :date
  %p
    = f.label :problem
    = f.text_area :problem, :rows => 2, :cols => 40 
  %p
    = f.label :maintenance_performed
    = f.text_area :maintenance_performed, :rows => 2, :cols => 40
  %p
    = f.label :result
    = f.text_area :result, :rows => 2, :cols => 40
  = f.submit @maintenance_event.new_record? ? 'Log maintenance event' : 'Update maintenance event', :disable_with => "Submitting..."